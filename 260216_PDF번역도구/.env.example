# -------------------------------------
# Required (Primary)
# -------------------------------------
GEMINI_API_KEY=your_gemini_api_key
TRANSLATION_PROVIDER=gemini
GEMINI_MODEL=gemini-2.0-flash

# -------------------------------------
# Core runtime defaults (PRD aligned)
# -------------------------------------
PARALLEL_WORKERS=4
GLOSSARY_AUTO_ACCEPT_THRESHOLD=0.90
MAX_RETRY=3
REQUEST_TIMEOUT_SECONDS=60
LOG_LEVEL=INFO

# -------------------------------------
# Input/Output paths
# -------------------------------------
INPUT_DIR=./input
OUTPUT_DIR=./output
ARCHIVE_DIR=./output/archive
EVIDENCE_DIR=./output/evidence

# -------------------------------------
# OCR fallback (Google Vision)
# Enable only when local extraction quality is low
# -------------------------------------
OCR_FALLBACK_ENABLED=true
OCR_FALLBACK_PROVIDER=google_vision
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/service-account.json

# -------------------------------------
# OCR fallback alternatives (optional)
# -------------------------------------
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=
AZURE_DOCUMENT_INTELLIGENCE_KEY=

# -------------------------------------
# Translation fallback (optional)
# -------------------------------------
TRANSLATION_FALLBACK_PROVIDER=
DEEPL_API_KEY=

# -------------------------------------
# Versioning policy
# -------------------------------------
OUTPUT_FILENAME_PATTERN={source_name}_ko_v{version}.pdf
ALLOW_OVERWRITE=false

# NOTE:
# - Do not commit real API keys.
# - Copy this file to .env and fill actual values.
